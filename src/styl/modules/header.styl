.header
  @extend .clearfix
  padding-top rem(60px)
  height 100vh
  background url('../img/general/yosemite.jpg') no-repeat center center fixed 
  background-size cover
  text-align center
    
.header__icon
  width rem(140px)
  height @width

.header__brand
  padding-top rem(20px)
  font 700 rem(60px) font-family-brand
  text-transform uppercase
  text-shadow 1px 1px rgba(black, .5), 2px 2px white-text
  color white-text