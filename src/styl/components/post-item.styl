.post-item
  cf()
  col(1/3)
  padding rem(70px) 0
  
.post-item__title
  margin 0
  font-size rem(38px)
  color black-text
  &:hover
    color deep-orange
    
.post-item__date
  margin rem(10px) 0
  display block
  font-size rem(14px)
  font-family font-family-serif
  font-style italic
  color deep-orange
  
  &:after
    content ''
    position relative
    left rem(5px)
    bottom rem(3px)
    display inline-block
    width rem(100px)
    height rem(2px)
    background deep-orange
    
.post-item__description
  font-family font-family-sans
  font-size 1.25rem
  font-weight 300
  color black-text
  

.post-item__read-more
  text-align center
  a
    background-clip padding-box
    border-radius 100px
    border 2px solid #d0d0d0
    color #bfbfbf
    display inline-block
    font-size .85rem
    font-weight 700
    font-family font-family-sans
    letter-spacing 1px
    line-height 1em
    padding 1rem 3rem
    text-transform uppercase
    background-color rgba(255,255,255,0)
    &:hover
      background-image linear-gradient(-108deg, red, deep-orange)
      border-color transparent
      color white
  