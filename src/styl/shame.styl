.test
  cf()
  position fixed
  top 0
  padding rem(150px)
  size 100% 100vh
  background rgba(255,255,255,.92)
  text-align center
  // background-image linear-gradient(-45deg, primary, green)
  background-image linear-gradient(-45deg, red-500, deep-orange-a200)
  
.test__logo
  cf()
  position relative
  top 11px
  margin 0 auto
  display inline-block
  display none
  size rem(100px)
  
.test__superlogo
  
  
.test__name
  // display inline-block
  font 900 rem(90px) font-family-brand
  font 400 rem(90px) font-family-cursive
  // text-transform uppercase
  color white
  
.test__tagline
  font italic 300 rem(40px) font-family-serif
  color white
  
  background red

.header__menu-toggle
  padding rem(7px)
  margin-top 15px
  float right
  size rem(50px)
  border 3px solid black
  border-radius 50%
  fill black
  
  &:hover
    background black
    cursor pointer
    fill white
    border-color white
  
