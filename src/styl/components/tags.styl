.tag-cloud
  @extend .container
  margin-top 2rem
  margin-bottom @margin-top

.tag-cloud__title
  font-size 4rem
  font-weight 300
  margin-top 0
  
.tag-cloud__item
  background-clip padding-box
  border-radius rem(100px)
  display inline-block
  font-size .85rem
  font-weight 700
  font-family font-family-sans
  letter-spacing 1px
  line-height 1em
  padding 1rem 3rem
  text-transform uppercase   
  border-color transparent
  color white
  outline 0
  margin-bottom 7px
  background rgba(255,255,255,0)
  padding .5rem 1.5rem
  color #bfbfbf
  border 2px solid #d0d0d0
  &:focus
    outline 0
    
  &:hover
    background-image linear-gradient(-108deg, red, deep-orange)
    border-color transparent
    color white
          
.tag-list__title
  @extend .container
  margin-top 4rem
  font 400 1.75rem font-family-serif
  
.tag-list__posts
  margin 0
  padding 0
  list-style none
  
  li
    width 100%
    position relative
    overflow hidden      
      
    &:hover
      color white
      background deep-orange
      background-image linear-gradient(-108deg, red, deep-orange)
      background url(../img/general/orange-background.png)
      
      a
        color white
      a:first-child:before
      a:after
        transition all .28s cubic-bezier(0.4, 0, 0.2, 1)
        background deep-orange
        background-image linear-gradient(-108deg, red, deep-orange)
        
      .entry-date 
        color white
    &:first-child a:before 
      content ''
      position absolute
      top 0
      size 100% rem(2px)
      background grey-300

  a
    @extend .container
    padding 1.5rem 0
    position relative
    font 500 1.5rem font-family-sans
    color grey-400
    &:after
      content ''
      position absolute
      bottom 0
      size 100% rem(2px)
      background grey-300
  .entry-date
    padding-right 1rem
    font-size 0.75rem
    font-style italic
    font-family font-family-serif
    text-transform uppercase    
    font-weight 600
    color deep-orange
    line-height 1rem
    vertical-align middle  
    display none
    +above('sm')
      display initial
