/**
 * Define the shadows
 */
shadow-z1 = 0 1px 4px 0 rgba(0, 0, 0, 0.37)
shadow-z2 = 0 6px 10px 0 rgba(0, 0, 0, 0.3), 0 2px 2px 0 rgba(0, 0, 0, 0.2)
shadow-z3 = 0 13px 25px 0 rgba(0, 0, 0, 0.3), 0 11px 7px 0 rgba(0, 0, 0, 0.19)
shadow-z4 = 0 20px 40px 0 rgba(0, 0, 0, 0.3), 0 14px 12px 0 rgba(0, 0, 0, 0.17)
shadow-z5 = 0 27px 55px 0 rgba(0, 0, 0, 0.3), 0 17px 17px 0 rgba(0, 0, 0, 0.15)


/**
 * Define the transitions
 */
transition-bezier = cubic-bezier(0.4, 0, 0.2, 1)


/**
 * Define the typography settings
 */

/** Font families */
font-family-brand     = "Oswald", "Roboto", Helvetica, Arial, sans-serif
font-family-brand     = "Raleway", "Roboto", Helvetica, Arial, sans-serif
font-family-brand     = "Lato", "Roboto", Helvetica, Arial, sans-serif
font-family-brand     = "Lora", "Roboto", Helvetica, Arial, sans-serif
font-family-brand     = "Roboto Slab", "Roboto", Helvetica, Arial, sans-serif
font-family-brand     = "Lora", "Roboto", Helvetica, Arial, sans-serif
font-family-brand     = 'Merriweather', serif;
font-family-brand     = 'Montserrat', serif;
font-family-sans      = "RobotoDraft", "Roboto", Helvetica, Arial, sans-serif
font-family-sans      = "Lato", "Roboto Slab", Helvetica, Arial, sans-serif
font-family-sans      = "Open Sans", "Roboto Slab", Helvetica, Arial, sans-serif
font-family-sans      = "Source Sans Pro", "Roboto Slab", Helvetica, Arial, sans-serif
font-family-serif     = "Roboto Slab", Georgia, "Times New Roman", Times, serif
font-family-monospace = Menlo, Monaco, Consolas, "Courier New", monospace
font-family-base      = font-family-sans
font-family-cursive   = "Pacifico", "Roboto Slab", Helvetica, Arial, sans-serif

/** Font sizes */
font-size-base    = 16px
font-size-smaller = ceil(font-size-base * 0.65)
font-size-small   = ceil(font-size-base * 0.85)
font-size-large   = ceil(font-size-base * 1.25)
font-size-larger  = floor(font-size-base * 1.45)

font-size-h1 = floor((font-size-base * 2.6))
font-size-h2 = floor((font-size-base * 2.15))
font-size-h3 = ceil((font-size-base * 1.7))
font-size-h4 = ceil((font-size-base * 1.25))
font-size-h5 = font-size-base
font-size-h6 = ceil((font-size-base * 0.85))

/** Line height */
line-height-base     = 1.428571429 
line-height-computed = floor((font-size-base * line-height-base))


/**
 * Defint the rupture breakpoins
 */
rupture.scale       = 0 480px 768px 992px 1170px
rupture.scale-names = 'xs' 'sm' 'md' 'lg' 'xl'

 
/**
 * Define the container sizes
 */
container-xs    = 95%
container-sm    = 90%
container-md    = 90%
container-lg    = 980px
container-xl    = 1080px
container-fluid = 95%